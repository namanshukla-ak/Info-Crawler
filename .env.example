# Backend API Configuration
API_BASE_URL=http://localhost:8000

# AWS Configuration (for production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# S3 Configuration
S3_BUCKET_NAME=research-intelligence-data
S3_RAW_PREFIX=raw/
S3_CURATED_PREFIX=curated/
S3_EXPORTS_PREFIX=exports/

# DynamoDB Configuration
DYNAMODB_RUNS_TABLE=research_runs
DYNAMODB_PEOPLE_TABLE=research_people
DYNAMODB_JOBS_TABLE=research_jobs
DYNAMODB_NEWS_TABLE=research_news

# OpenSearch Configuration
OPENSEARCH_ENDPOINT=your-opensearch-endpoint.amazonaws.com
OPENSEARCH_INDEX_PEOPLE=people
OPENSEARCH_INDEX_JOBS=jobs

# Bedrock Configuration
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0
BEDROCK_MAX_TOKENS=4096

# Scraping Configuration
CRAWL4AI_RATE_LIMIT=2
CRAWL4AI_TIMEOUT=30
RESPECT_ROBOTS_TXT=true

# News API Configuration
NEWS_API_KEY=your_news_api_key
NEWS_API_PROVIDER=google  # google, bing, or chronicle

# Application Settings
LOG_LEVEL=INFO
DEBUG_MODE=false
DATA_TTL_DAYS=90
